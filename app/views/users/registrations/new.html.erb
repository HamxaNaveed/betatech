<main>
  <!-- breadcrumb area start -->
  <section class="breadcrumb__area include-bg pt-150 pb-150 breadcrumb__overlay header-img" data-background="images/breadcrumb/breadcrumb-bg-1.jpg">

    <div class="container">
      <div class="row">
        <div class="col-xxl-12">
          <div class="breadcrumb__content text-center p-relative z-index-1">
            <h3 class="breadcrumb__title">Sign Up</h3>
            <div class="breadcrumb__list">
              <span>Home</span>
              <span class="dvdr"
                ><i class="fa-regular fa-angle-right"></i
              ></span>
              <span>Sign Up</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- breadcrumb area end -->

  <!-- sign up area start -->
  <section class="signup__area p-relative z-index-1 pt-100 pb-145">
    <div class="sign__shape">
      <img class="man-1" src="images/icon/sign/man-1.png" alt="" />
      <img class="man-2" src="images/icon/sign/man-2.png" alt="" />
      <img class="circle" src="images/icon/sign/circle.png" alt="" />
      <img class="zigzag" src="images/icon/sign/zigzag.png" alt="" />
      <img class="dot" src="images/icon/sign/dot.png" alt="" />
      <img class="bg" src="images/icon/sign/sign-up.png" alt="" />
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xxl-8 offset-xxl-2 col-xl-8 offset-xl-2">
          <div class="section__title-wrapper text-center mb-55">
            <h2 class="section__title">
              Sign up to <br />
              recharge direct.
            </h2>
            <p>
              it you don't have an account you can
              <a href="#">Register here!</a>
            </p>
          </div>
        </div>
      </div>
      <div class="row">
        <div
          class="col-xxl-6 offset-xxl-3 col-xl-6 offset-xl-3 col-lg-8 offset-lg-2"
        >
          <div class="sign__wrapper white-bg">
            
            <div class="sign__form">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="sign__input-container">
                <div class="sign__input-wrapper mb-25">
                  <%= f.label :email %>
                  <div class="sign__input">
                    <%= f.email_field :email, autofocus: true, placeholder:
                    "Email" %>
                    <i class="fal fa-envelope"></i>
                  </div>
                </div>
                <div class="sign__input-wrapper mb-25">
                  <%= f.label :firstname %>
                  <div class="sign__input">
                    <%= f.text_field :firstname, autofocus: true, placeholder:
                    "First Name" %>
                    <i class="fal fa-user"></i>
                  </div>
                </div>
                <div class="sign__input-wrapper mb-25">
                  <%= f.label :lastname %>
                  <div class="sign__input">
                    <%= f.text_field :lastname, autofocus: true, placeholder:
                    "Last Name" %>
                    <i class="fal fa-user"></i>
                  </div>
                </div>
                <div class="sign__input-wrapper mb-25">
                  <%= f.label :contact %>
                  <div class="sign__input">
                    <%= f.text_field :contact, autofocus: true, placeholder:
                    "Phone", id: "contact-field" %>
                    <i class="fal fa-phone"></i>
                  </div>
                </div>
                <div class="sign__input-wrapper mb-10">
                  <%= f.label :password %>
                  <div class="sign__input">
                    <%= f.password_field :password, placeholder: "Password" %>
                    <i class="fal fa-lock"></i>
                  </div>
                </div>
                <div class="sign__input-wrapper mb-10">
                  <%= f.label :password_confirmation %>
                  <div class="sign__input">
                    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %>
                    <i class="fal fa-lock"></i>
                  </div>
                </div>
              </div>
              <%= f.submit "Sign Up", class: "btn btn-primary w-100" %>
              <div class="sign__new text-center mt-20">
                <%= render "devise/shared/links" %>
              </div>
              <% end %>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- sign up area end -->
</main>
