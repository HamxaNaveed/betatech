<main>

  <section class="event__area pt-115 p-relative">
    <div class="page__title-shape">
      <img class="page-title-shape-5 d-none d-sm-block" src="assets/img/breadcrumb/page-title-shape-1.png" alt="">
      <img class="page-title-shape-6" src="assets/img/breadcrumb/page-title-shape-2.png" alt="">
      <img class="page-title-shape-7" src="assets/img/breadcrumb/page-title-shape-4.png" alt="">
      <img class="page-title-shape-8" src="assets/img/breadcrumb/page-title-shape-5.png" alt="">
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xxl-8">
          <div class="event__wrapper">
            <div class="page__title-content mb-25">
              <div class="breadcrumb__list breadcrumb__list-2 mb-10">
                <span>
                  <%= link_to "Home" , root_path%>
                </span>
                <span class="dvdr"><i class="fa-regular fa-angle-right"></i></span>
                <span>Courses</span>
              </div>
              <span class="breadcrumb__title-pre">
                <%= @course.course_category.name%>
              </span>
              <h5 class="breadcrumb__title-2">
                <%= @course.title%>
              </h5>
            </div>
          </div>
        </div>
      </div>
      
              <div class="row">
              </div>
              <div class="row">
                <div class="col-xxl-6 offset-xxl-3 col-xl-6 offset-xl-3 col-lg-8 offset-lg-2">
                  <div class="sign__wrapper white-bg">

                    <div class="sign__form justify-content-center">
                      <%= form_with model: @enrollment, url: course_enrollments_path(course_slug: @course.slug), method: :post do |f| %>
                      <% if @enrollment.errors.any? %>
                        <div class="alert alert-danger">
                          <% @enrollment.errors.each do |error| %>
                            <%= error %>
                              <% end %>
                        </div>
                        <% end %>
                        <div class="sign__input-wrapper mb-25">
                          <%= f.label :course_title%>
                            <div class="sign__input">
                              <%= f.hidden_field :course_id, value: @course.id %>
                              <%= f.text_field :course_title, value: @course.title, readonly: true %>
                              <i class="fal fa-envelope"></i>
                            </div>
                        </div>
                        <div class="text-center">
                          <%= f.submit "Enroll" , class: "btn btn-primary btn-lg" %>
                        </div>
                          <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
    </div>

  </section>
  <!-- event area end -->

  <!-- event details area start -->

  <!-- event details area end -->

<br>
</main>